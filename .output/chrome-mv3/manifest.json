{
  "manifest_version": 3,
  "name": "Web notes",
  "description": "Quickly write, paste, or dictate notes directly in the browser.",
  "version": "1.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "key": "",
  "version_name": "1.0.2",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "exclude_matches": [
        "*://extensions/*",
        "*://newtab/*"
      ],
      "js": [
        "content-scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon/*.png",
        "illustration/*.png",
        "utils/typed.umd.js",
        "font/*.ttf"
      ],
      "matches": [
        "<all_urls>"
      ]
    },
    {
      "resources": [
        "content-scripts/content.css"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "host_permissions": [
    "*://*/*",
    "http://localhost/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}